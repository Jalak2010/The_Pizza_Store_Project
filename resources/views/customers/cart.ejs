<section class="cart">

    <% if(session.cart) { %>

        <div class="order container mx-auto text-white xl:w-1/2">
            <div class="flex items-center border-b border-gray-300 pb-4">
                <!-- <img src="/img/cart-black.png" alt="image"> -->
                <i class="fas fa-cart-plus icon-cart"></i>
                <h1 class="font-bold text-white pt-2 ml-2 text-2xl">Order Summary</h1>
            </div>

            <div class="pizza-list">

                <% for(let pizza of Object.values(session.cart.items)) { %>

                    <div class="flex items-center my-8">
                        <img class="w-24" src="/img/<%= pizza.item.image %>" alt="">
                        <div class="flex-1 ml-4">
                            <h1>
                                <%= pizza.item.name %>
                            </h1>
                            <span class="text-center" style="font-size: 18px;">
                                <%= pizza.item.size %>
                            </span>
                        </div>
                        <span class="flex-1 fw-bold" style="font-size: 20px; letter-spacing: 1px;">
                            <%= pizza.qty %> Pcs
                        </span>
                        <span class="fw-bold" style="font-size: 20px;letter-spacing: 1px;">
                            ‚Çπ <%= pizza.item.price * pizza.qty %>
                        </span>
                    </div>
                    <% } %>
            </div>
            <hr>

            <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold" style="letter-spacing: 1px;font-size: 20px;">Total Amount</span>
                    <span class="amount text-2xl font-bold ml-2">‚Çπ <%= session.cart.totalPrice %></span>
                </div>
                <!-- /user login hase to j order kari shake./ -->
                <% if(user) { %>
                    <div>
                        <form action="/orders" method="post" class="mt-12">
                            <input name="phone" class=" p-2 w-1/2 mb-4 text-black" type="text"
                                placeholder="Phone Number">
                            <input name="address" class=" p-2 w-1/2 text-black" type="text"
                                placeholder="Address">

                            <div>
                                <button class="px-4 py-2 text-white font-bold mt-6"
                                    type="submit"> Order Now</button>
                            </div>
                        </form>
                    </div>
                    <% } else { %>

                        <a href="/login"
                            class="inline-block cursor-pointer px-6 btn-primary py-2 rounded-full text-white font-bold mt-6">Login
                            to Continue</a>
                        <% } %>
            </div>
        </div>

        <%1 }else { %>

            <div class="empty-cart py-12">
                <div class="container mx-auto text-center">
                    <h1 class="text-3xl text-white font-bold mb-3">Cart Empty üòê</h1>
                    <p class="text-white text-lg pb-2">
                        your cart is empty. <br>
                        please add some items.!!
                    </p>
                    <img class="w-1/3 mx-auto pb-2  " src="/img/bg3.png" alt="image">
                    <button><a href="/">Go Back</a></button>

                </div>
                <% } %>
</section>