<!-- login page design  -->
<div class="Main_Login">
<div class="container-fluid bg-img">
  <div class="usr-Reister">
    <div class="row transparent-style px-4 py-4">

      <div class="col-6">
        <img src="/img/Animated_Svg/login_animation.svg" alt="register animation">
      </div>

      <div class="col-6 pt-4">
        <form action="/login" method="POST">

          <% if(messages.error) { %>
            <span class="text-red-500 text-sm">
              <%= messages.error %>
            </span>
            <% } %>

          <h2 class="pb-2">Sign In</h2>
          <div class="mb-2">
            <label for="exampleInputEmail1" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Your Email"
              aria-describedby="emailHelp">
          </div>

          <div class="mb-2 mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Your Password" >
          </div>
          <button type="submit" class="btn btn-submit mt-1 px-4">Log In</button>

          <a href="/register" class="px-3 py-2">Don't have account?</a>
          
        </form>
      </div>
    </div>
  </div>
</div>


<script>
  var state = false;
  function toggle() {
      if(state) {
          document.getElementById("password").setAttribute("type","password");
          document.getElementById("eye").style.color = 'red';
          state = false;
      }
      else {
          document.getElementById("password").setAttribute("type","text");
          document.getElementById("eye").style.color = 'green';
          state = true;
      }
  }
</script>