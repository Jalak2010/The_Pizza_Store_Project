<!-- user-Register form -->
<div class="Main_Login">
<div class="container-fluid bg-img">
  <div class="usr-Reister">
  <div class="row transparent-style px-4 py-4">

    <div class="col-6">
      <img src="/img/Animated_Svg/register_animate.svg" alt="register animation">
    </div>

    <div class="col-6">
      <form action="/register" method="POST">

        <% if(messages.error) { %>
          <span class="text-red-500 text-sm"><%= messages.error %></span>
        <% } %> 

        <h2 class="pb-2">Register</h2>
        <div class="mb-2">
          <label for="exampleInputName" class="form-label">Name</label>
          <input type="text" id="name" name="name" value="<%= messages.name%>" class="form-control" placeholder="Enter Your Name" >
        </div>  
        <div class="mb-2">
          <label for="exampleInputEmail1" class="form-label">Email</label>
          <input type="email" id="email"  name="email"  value="<%= messages.email%>" class="form-control" placeholder="Enter Your Email" aria-describedby="emailHelp">
        </div>
        <div class="mb-2 mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="******">
        </div>

        <button type="submit" class="btn btn-submit mt-1 px-4">Register</button>

        <a  href="/login" class="px-2">Already have account?</a>

      </form>
    </div>
  </div>
</div>
</div>